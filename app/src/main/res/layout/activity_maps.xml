<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebp.sharedlistening.MapsActivity" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Set Song"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton"
        android:textColor="@color/colorText"
        android:onClick="setSong">

    </Button>

    <Button
        android:id="@+id/playerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:text="Play/Pause"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton"
        android:textColor="@color/colorText"
        android:onClick="playerStateChange">
    </Button>




    <Button
        android:id="@+id/followBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="follow User"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton"
        android:textColor="@color/colorText"
        android:onClick="followUser">
    </Button>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="Listen to song"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton"
        android:textColor="@color/colorText"
        android:onClick="listenToSong">
    </Button>


    </fragment>
